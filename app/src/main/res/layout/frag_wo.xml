<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/w0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--导航栏-->
    <RelativeLayout
        android:id="@+id/title"
        android:paddingStart="@dimen/width_48"
        android:paddingEnd="@dimen/width_48"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y144">

        <!--设置-->
        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/set"
            android:src="@mipmap/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <!--发布动态-->
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/publisj"
            android:src="@mipmap/feather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </RelativeLayout>

    <!--分割线-->
    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/line"
        android:visibility="invisible"
        android:background="@color/g1"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </View>

    <!--朋友圈-->
    <com.xiaoshangxing.utils.pull_refresh.PtrFrameLayout
        android:id="@+id/reflesh_layout"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:fadingEdge="none"
           android:overScrollMode="never"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </com.xiaoshangxing.utils.pull_refresh.PtrFrameLayout>

</LinearLayout>