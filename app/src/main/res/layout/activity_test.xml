                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/third"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x48"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="3"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/forth"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x48"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="4"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x48"
                android:layout_marginEnd="@dimen/x96"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="5"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>
    </HorizontalScrollView>


